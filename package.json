{
  "name": "gemini-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:1420 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "node scripts/run-e2e-sequential.cjs",
    "test:e2e:lifecycle": "wdio run wdio.lifecycle.conf.js",
    "test:e2e:all": "npm run test:e2e && npm run test:e2e:lifecycle",
    "docs": "typedoc --out docs src"
  },
  "dependencies": {
    "framer-motion": "^12.23.26",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@wdio/cli": "^9.21.1",
    "@wdio/globals": "^9.17.0",
    "@wdio/local-runner": "^9.21.0",
    "@wdio/mocha-framework": "^9.21.0",
    "@wdio/spec-reporter": "^9.20.0",
    "@wdio/types": "^9.20.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "expect-webdriverio": "^5.5.0",
    "jsdom": "^27.3.0",
    "typedoc": "^0.28.15",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3",
    "wdio-electron-service": "^9.2.1"
  }
}